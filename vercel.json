{
    "rewrites": [
      { "source": "/backend/(.*)", "destination": "/api/$1" }
    ],
    "builds": [
      {
        "src": "backend/Config/**",
        "use": "@vercel/node"
      },
      {
        "src": "backend/Controller/**",
        "use": "@vercel/node"
      },
      {
        "src": "backend/Middleware/**",
        "use": "@vercel/node"
      },
      {
        "src": "backend/Model/**",
        "use": "@vercel/node"
      },
      {
        "src": "backend/node_modules/**",
        "use": "@vercel/node"
      },
      {
        "src": "backend/Routes/**",
        "use": "@vercel/node"
      },
      {
        "src": "backend/test/**",
        "use": "@vercel/node"
      },
      {
        "src": "backend/views/**",
        "use": "@vercel/node"
      },
      {
        "src": "backend/.env",
        "use": "@vercel/node"
      },
      {
        "src": "backend/.gitignore",
        "use": "@vercel/node"
      },
      {
        "src": "backend/app.js",
        "use": "@vercel/node"
      }
    ]
  }
  